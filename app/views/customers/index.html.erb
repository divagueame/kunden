<div class="w-full lg:w-2/3 mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col md:flex-row gap-4 justify-between items-center">
    <h1 class="font-bold text-4xl">Kundendatenbank</h1>
    <%= link_to "New Kunde", new_customer_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium"  %>
  </div>

  <div class="flex justify-between items-center my-8">
    <div class="min-w-full flex flex-col gap-14 md:gap-2 shadow-md rounded">
      <div class="hidden md:flex gap-2 items-center shadow bg-slate-100 py-2 px-4 rounded-sm"> 
        <p class="basis-1/3">
          <strong class="block font-medium ">Vorname:</strong>
        </p>
        <p class="basis-1/3">
          <strong class="block font-medium ">Nachname:</strong>
        </p>
        <p class="basis-1/3">
          <strong class="block font-medium ">E-mail:</strong>
        </p>
        <p class="basis-1/3">
          <strong class="block font-medium ">Erstellt:</strong>
        </p>
      </div>

      <%= render @customers %>
    </div>
  </div>

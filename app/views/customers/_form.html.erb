<%= form_with(model: customer, class: "border shadow-xl py-3 px-6 rounded") do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3 flex items-center gap-4">
      <%= inline_svg_tag "icons/error.svg", class: "w-10 h-10" %>
      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

